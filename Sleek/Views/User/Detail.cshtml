@model Sleek.Models.User

@{
    ViewBag.Title = "User (Edit)";
}

@section CSS {

}

@section Scripts {
    <script src="~/assets/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/assets/plugins/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="content">
    <div class="row">
        <div class="col-12 col-lg-6 mx-auto">
            <form asp-action="#">
                <div class="card card-default">
                    <div class="card-header card-header-border-bottom">
                        <h2>User Detail</h2>
                    </div>
                    <div class="card-body">
                        <input asp-for="UsrId" type="hidden" />
                        <input asp-for="UsrCusid" type="hidden" />
                        <div class="form-group">
                            <label asp-for="UsrFirst">@Html.DisplayNameFor(model => model.UsrFirst)</label>
                            <input asp-for="UsrFirst" class="form-control pb_height-50 reverse" placeholder="@Html.DisplayNameFor(model => model.UsrFirst)">
                            <span asp-validation-for="UsrFirst" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsrLast">@Html.DisplayNameFor(model => model.UsrLast)</label>
                            <input asp-for="UsrLast" class="form-control pb_height-50 reverse" placeholder="@Html.DisplayNameFor(model => model.UsrLast)">
                            <span asp-validation-for="UsrLast" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsrName">@Html.DisplayNameFor(model => model.UsrName)</label>
                            <input asp-for="UsrName" class="form-control pb_height-50 reverse" placeholder="@Html.DisplayNameFor(model => model.UsrName)">
                            <span asp-validation-for="UsrName" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsrEmail">@Html.DisplayNameFor(model => model.UsrEmail)</label>
                            <input asp-for="UsrEmail" class="form-control pb_height-50 reverse" placeholder="@Html.DisplayNameFor(model => model.UsrEmail)">
                            <span asp-validation-for="UsrEmail" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UsrNote">@Html.DisplayNameFor(model => model.UsrNote)</label>
                            <textarea asp-for="UsrNote" class="form-control pb_height-110" placeholder="@Html.DisplayNameFor(model => model.UsrNote)"></textarea>
                            <span asp-validation-for="UsrNote" class="text-danger small"></span>
                        </div>
                    </div> <!-- Card Body -->
                </div> <!-- Card -->
                <div class="form-group float-right">
                    <button asp-controller="User" asp-action="Save" asp-route-id="@Model.UsrId" class="btn btn-success btn-lg px-4 mr-2">Save</button>
                    <button asp-controller="User" asp-action="Delete" asp-route-id="@Model.UsrId" class="btn btn-danger btn-lg px-4 mr-2">Delete</button>
                    <button asp-controller="User" asp-action="Close" class="btn btn-secondary btn-lg px-4">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>


